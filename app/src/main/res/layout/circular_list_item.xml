<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <qt.com.queuetracker.CustomView.RoundImageView
        android:id="@+id/service_img"
        android:layout_width="@dimen/rounded_image_size"
        android:layout_height="@dimen/rounded_image_size"
        android:layout_margin="@dimen/very_small_margin"
        android:background="@null" />

    <TextView
        android:id="@+id/service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/service_img"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/service_img" />

</RelativeLayout>